<%- include("../include/head")  %> 
<%- include("../include/aside")  %> 
<%- include("../include/navePare")  %> 
<%- include("../include/alert")  %> 
<style>
	.testPar {
		width:250px;
		overflow: hidden;
		white-space:nowrap;
	}
</style>
</head>
    </body>
        <!-- Main Wrapper -->
        <div class="main-wrapper">
            <!-- Page Wrapper -->
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row">
                            <div class="col-sm-7 col-auto">
                                <h3 class="page-title">كل الكتب</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">لوحه التحكم</a></li>
                                    <li class="breadcrumb-item active">الكتب</li>
                                </ul>
                            </div>
                        </div>
                        <%- include("../include/notification")  %> 
                    </div>
                    <!-- /Page Header -->
                    <div class="row">
                        <div class="col-sm-12">
							<div class="card">
								<div class="card-body">
									<div class="table-responsive">
										<table class="datatable table table-hover table-center mb-0">
											<thead>
												<tr>
													<th> اسم الكتاب</th>
													<th>المحتوي</th>
													<th>التحكم</th>
												</tr>
											</thead>
											<tbody>
												<% books.forEach(element => { %>
													<tr>
														<td>
															<h2 class="table-avatar">
																<a style="margin-left:10px" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="/backEnd/assets/img/Book/<%= element.image ? element.image.split("--")[0] : "avatar.png" %>" alt="training Image "></a>
																<a ><p class="testPar"><%= element.name %></p></a>
															</h2>
														</td>
													<td>
                                                        <a style="margin-left:10px" target="_blank" href="/backEnd/assets/img/Book/<%=  element.pdf.split("--")[0] %>" class="avatar avatar-sm mr-2">pdf</a>
                                                    </td>
													
													<td>
														<a href="/dashpord/activeBook/<%= element.id %>?isActive=<%= element.active %>" class="btn btn-primary"><%= !element.active ? "غير مفعل" : "مفعل" %></a>
														<a href="/dashpord/EditBook/<%= element.id %>" class="btn btn-success">تعدبل</a>
														<form class="d-inline" method="post" action="/dashpord/deleteBook/<%= element.id %>">
															<input type="hidden" name="oldImage" id="" value="<%= element.image %>">
															<input type="hidden" name="oldPdf" id="" value="<%= element.pdf %>">
															<button class="btn btn-danger">حذف</button>
														</form>

													</td>
												</tr>
												<% }) %>

											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>	
                    </div>
                </div>			
            </div>
            <!-- /Page Wrapper -->


        <%- include("../include/footer_script")  %> 
        		
		<!-- Datatables JS -->
		<script src="/backEnd/assets/plugins/datatables/jquery.dataTables.min.js"></script>
		<script src="/backEnd/assets/plugins/datatables/datatables.min.js"></script>
        <script  src="/backEnd/assets/js/script.js"></script>

    </head>
</body>